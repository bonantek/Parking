@model IEnumerable<Parking>

@{
    ViewData["Title"] = "Manage Pargings";
}
@if (TempData["SuccessMessage"] != null)
{
<div class="alert alert-success text-center">
    @TempData["SuccessMessage"]
</div>
}
@if (TempData["ErrorMessage"] != null)
{
<div class="alert alert-danger text-center">
    @TempData["ErrorMessage"]
</div>
}

<h1 id="Title">Manage Parkings</h1>
<div id="ParkingFlexContainer">
    @foreach (var parking in Model)
    {
        <a asp-controller="Parking" class="parking-flex-item" asp-action="Update" asp-route-id="@parking.Id">
            <h2>@parking.Name</h2>
            City: @parking.City <br/>
            Street: @parking.Street <br/>
            Street Number: @parking.StreetNr <br/>
            Capacity: @parking.Capacity <br/>
            Description: @parking.Description <br/>
        </a>
    }

    <a id="AddParking" class="parking-flex-item-add" asp-controller="Parking" asp-action="Create">
        +
    </a>
</div>