@model Car

@if (TempData["ErrorMessage"] != null)
{
<div class="alert alert-danger text-center">
    @TempData["ErrorMessage"]
</div>
}
<h3>Add Car</h3>

<form asp-controller="Car" asp-action="Create" method="post">
    <div>
        <label asp-for="RegistrationNumber">Registration No: </label><br>
        <input asp-for="RegistrationNumber" />
        <span asp-validation-for="RegistrationNumber"></span>
    </div>
    
    <div>
        <label asp-for="Make">Make:</label><br>
        <input asp-for="Make"/>
        <span asp-validation-for="Make"></span>
    </div>
    
    <div>
        <label asp-for="Model">Model:</label><br>
        <input asp-for="Model"/>
        <span asp-validation-for="Model"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Create</button>
</form>